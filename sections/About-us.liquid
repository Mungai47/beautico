<div data-section-id="{{ section.id }}"   data-section-type="aboutus-wrap" class="aboutus-wrap ourteam_wrap {{section.settings.ourteam_style }}">
    <div class="row">
       {% if section.settings.title != blank  %}
      <div class="section-header">
                 
        {% if section.settings.title != blank %}
        <h2 class="tt-title">{{ section.settings.title }}</h2>  
        {% endif %}
        {% if section.settings.sub_title != blank %}
          <div class="short-desc"> <p>{{ section.settings.sub_title }}</p>  </div>
        {% endif %}
      
        </div>
        {% endif %}
      <div class="our_team">
        {% if section.blocks.size > 0 %} 
        <ul class="ourteam_slider owl-carousel" data-column="{{ section.settings.ourteam_column }}"> 
        {% for block in section.blocks %}
        <li class="teammember-item">
          <div class="teammember-content">
            <div class="ourteam-image-wrap">
              <div class="ourteam-image">
               <img src="{{  block.settings.image_1 | img_url: "master" }}" alt="{{  block.settings.image_heading }}" />
              </div>
            </div>
            <div class="teammember-meta">
              <div class="teammember-inner">
                <div class="teammember-meta-inner">
                   {% if block.settings.author_name != blank %}
                  <div class="teammember-title">
                   {{ block.settings.author_name }}
                  </div>
                  {% endif %}
                   {% if block.settings.author_designation != blank %}
                  <p class="teammember-position">
                    {{ block.settings.author_designation }}
                  </p>
                    {% endif %}
                  <ul class="teammember-social-profile"> 
                    <li class="facebook">
                      <a href="{% if block.settings.facebook != blank %} {{ block.settings.facebook }} {% else %}#{% endif %}"> 
                        <i class="mdi mdi-facebook"></i> 
                      </a> 
                    </li>
                    <li class="twitter">
                      <a href="{% if block.settings.twitter != blank %} {{ block.settings.twitter }} {% else %}#{% endif %}">
                        <i class="mdi mdi-twitter"></i> 
                      </a> 
                    </li>
                    <li class="googleplus"> 
                      <a href="{% if block.settings.google-plus != blank %} {{ block.settings.google-plus }} {% else %}#{% endif %}"> 
                        <i class="mdi mdi-google-plus"></i> 
                      </a> 
                    </li>
                    <li class="instagram"> 
                      <a href="{% if block.settings.instagram != blank %} {{ block.settings.instagram }} {% else %}#{% endif %}"> 
                        <i class="mdi mdi-instagram"></i> 
                      </a> 
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          </li>
        {% endfor %}
           </ul>
        <div class="customNavigation"><div class="navigation_wrap"><a class="chevron-left prev ourteam_prev">{{ 'general.slider.prev' | t }}<span class="mdi mdi-arrow-left"></span></a><a class="chevron-right next ourteam_next">{{ 'general.slider.next' | t }}<span class="mdi mdi-arrow-right"></span></a></div></div>
        {% endif %}
      </div>
      </div>
</div>
