          "type": "text"
        },
        {
          "type": "text"
        }       
 		
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}


<script>
$(document).ready(function() {
 var col_n = $('.ourteam_slider').data('column');

if($(".ourteam_slider .owl-nav").hasClass('disabled')){
 jQuery(".our_team .customNavigation").hide();
}else{
 jQuery(".our_team .customNavigation").show();
}
 $('body:not(.rtl) .ourteam_wrap .ourteam_slider').owlCarousel({
              items : {{ section.settings.ourteam_column }}, //1 items above 1000px browser width
              nav : true,
              dots : false,
			loop: true,
           responsive: {
                  100: {
                    items: 1
                  },
                  543: {
                    items: 2
                  },
                  768: {
                    items: 3
                  },
                  992: {
                    items: 3
                  },
                   1200: {
                     items: {{ section.settings.ourteam_column }}
                  }
                }
          });
$('body.rtl .ourteam_wrap .ourteam_slider').owlCarousel({
              items : {{ section.settings.ourteam_column }}, //1 items above 1000px browser width
              nav : true,
				rtl:true,
			  loop: true,
              dots : false,
           responsive: {
                  100: {
                    items: 1
                  },
                  543: {
                    items: 2
                  },
                  768: {
                    items: 3
                  },
                  992: {
                    items: 3
                  },
                   1200: {
                     items: {{ section.settings.ourteam_column }}
                  }
                }
          });
       jQuery(".our_team .customNavigation .next").click(function(){
        jQuery('.our_team .ourteam_slider').trigger('next.owl');
      });
      jQuery(".our_team .customNavigation .prev").click(function(){
        jQuery('.our_team .ourteam_slider').trigger('prev.owl');
      }); 
});
</script>