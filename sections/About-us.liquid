              }
            ]
          },
			{
            "type": "select",
            "id": "ourteam_column",
            "label": "Select Our Team Column",
            "default": "4",
            "options": [
				{
                "value": "2",
                "label": "2 Column"
              },
              {
                "value": "3",
                "label": "3 Column"
              },
              {
                "value": "4",
                "label": "4 Column"
              },
			{
                "value": "5",
                "label": "5 Column"
              }
            ]
          }

          ],
          "blocks": [
          {
          "type": "text",
          "name": "Our Team",
          "settings": [
          {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image",
          "info": "Size: 140x140"
          },
 		 {
          "type": "text",
          "id": "image_heading",
          "label": "Image heading"
          },
          {
