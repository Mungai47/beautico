<div class="page-width top-to-bottom hb-animate-element" data-section-id="{{ section.id }}" data-section-type="featured-video-section">
  <div class="video-featured container">
    {% if section.settings.heading != blank %}
    <div class="ttvideooffer col-sm-3">
      <h2 class="video-title">{{ section.settings.heading }}</h2>
    </div>
    {% endif %}
    <div id="popup_toggle" class="col-sm-9">
      <div class="videoimg">
      <img src="{{  section.settings.video_img | img_url: "master" }}" alt="{{  section.settings.video_img }}" />
      <div class="image-hover"></div>
      <span class="play-icone"><i class="mdi mdi-play" aria-hidden="true"></i></span>
      </div>
    </div>
    <div class="popup_overlay">
      <div class="popup" id="popupVid"><a class="popup_close">X</a> 
        {% if section.settings.video_url.id == blank %}
        <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="1060" height="600" frameborder="0" allowfullscreen></iframe>
        {% else %}
        {% if section.settings.video_url.type == "youtube" %}
        <iframe src="//www.youtube.com/embed/{{ section.settings.video_url.id }}?vq=720" width="1060" height="600" frameborder="0" allowfullscreen></iframe>
        {% elsif section.settings.video_url.type == "vimeo" %}
        <iframe src="//player.vimeo.com/video/{{ section.settings.video_url.id }}?byline=0&portrait=0&badge=0" width="1060" height="600" frameborder="0" allowfullscreen></iframe>
        {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured video",
    "class": "index-section video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Video"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "YouTube or Vimeo link",
        "accept": ["youtube", "vimeo"]
      },
		{
        "type": "image_picker",
        "id": "video_img",
        "label": "video image"
      }		
    ],
    "presets": [
      {
        "name": "Featured video",
        "category": "Video"
      }
    ]
  }
{% endschema %}
